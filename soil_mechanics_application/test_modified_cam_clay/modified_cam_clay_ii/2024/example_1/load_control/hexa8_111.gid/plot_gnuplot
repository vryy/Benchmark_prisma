set terminal pdf enhanced color

set size ratio 0.5
#set key outside
#set size 2.0, 1.5

#set size square
set key right top

set xrange [0:900]
set yrange [0:450]

M = 1.2
pc0 = 200
#pc1 = 508333.333333/1000
pc1 = 666666.66666/1000

set output "loading_path.pdf"
set xlabel "p' (kPa)"
set ylabel "q (kPa)"
set parametric
set trange [0:pi]
plot "analytical_loading_path.txt" using ($1)/1000:($2)/1000 with lines title "analytical loading path", \
     "loading_path.txt" using ($1)/1000:($2)/1000 with lines title "loading path", \
     pc0/2*(1+cos(t)), M*pc0/2*sin(t) title "initial yield envelope", \
     pc1/2*(1+cos(t)), M*pc1/2*sin(t) title "final yield envelope", \
     t*600/pi, M*t*600/pi title "CSL"

unset parametric
unset xrange
unset yrange
set key right bottom

